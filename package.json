    "license": "MIT",
    "devDependencies": {
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "mocha": "^5.1.1",
        "mocha-multi": "^1.0.1",
        "ncp": "^2.0.0",
        "rimraf": "^2.6.2"
    },
    "scripts": {
        "build": "npm run lint && npm test",
        "lint": "eslint **/*.js",
